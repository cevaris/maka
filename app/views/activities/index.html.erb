<p id="notice"><%= notice %></p>

<%= form_tag(activities_path, :method => "get", id: "search-form") do %>
  <%= text_field_tag :q, params[:q], placeholder: "Search Activities" %>
  <%= submit_tag "Search" %>
  <%= link_to 'Clear', activities_path %>
<% end %>


<h1>Listing Activities</h1>

<% if @activities.present? %>
<table>
  <thead>
    <tr>
      <th>Creator</th>
      <th>Title</th>
      <th>Slug</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @activities.each do |activity| %>
    <tr>
      <td><%= activity.creator_id %></td>
      <td><%= activity.title %></td>
      <td><%= activity.slug %></td>
      <td><%= activity.description %></td>
      <td><%= link_to 'Show', activity %></td>
      <td><%= link_to 'Edit', edit_activity_path(activity) %></td>
      <td><%= link_to 'Destroy', activity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<% else %>
<p>There are no posts containing the term(s) <%= params[:q] %>.</p>
<% end %>

<br>

<%= link_to 'New Activity', new_activity_path %>
